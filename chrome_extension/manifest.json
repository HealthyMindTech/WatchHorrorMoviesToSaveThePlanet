{
    "manifest_version": 3,
    "name": "MovieZap",
    "version": "1.0.0",
    "content_scripts": [
        {
            "js": ["netflix.js"],
            "matches": ["https://www.netflix.com/*"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": ["https://www.nordpoolgroup.com/api/*"],
    "permissions": [
        "tabs",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html"
    }
}