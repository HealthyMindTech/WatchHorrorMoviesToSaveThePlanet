{
    "manifest_version": 3,
    "name": "MovieZap",
    "version": "1.0.0",
    "content_scripts": [
        {
            "js": ["netflix.js"],
            "matches": ["https://www.netflix.com/*"]
        }
    ],
    "permissions": [
        "activeTab",
        "webRequest",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://www.netflix.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    }
}